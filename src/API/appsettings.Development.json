{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost:5434;Database=gccdb;Username=gccuser;Password=gccpass;Include Error Detail=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "Logs/log.txt",
                "rollingInterval": "Day"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "Logs/log.clef",
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
                "rollingInterval": "Day"
              }
            }
          ]
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "apiKey": "none"
        }
      }
    ]
  },

  "Jcc": {
    "RestBaseUrl": "https://gateway-test.jcc.com.cy/payment/rest",
    "UserName": "nba-api",
    "Password": "iozfz-J0",
    "CurrencyNumeric": "978",
    "ReturnUrl": "http://localhost:5005/payments/callback",
    "FailUrl": "http://localhost:5005/payments/callback",
    "Language": "en"
  },

  "Kafka": {
    "BootstrapServers": "kafka1:19092,kafka2:19092",
    "Topic": "email",
    "ReconnectBackoffMs": 50, // Quick reconnect to alternative broker
    "ReconnectBackoffMaxMs": 5000, // Max reconnect backoff

    // Producer settings
    "Acks": "Leader",
    "SocketConnectionSetupTimeoutMs": 10000, // Time for initial connection
    "SocketTimeoutMs": 5000, // Failure detection
    "MessageSendMaxRetries": 5, // Retry attempts
    "RetryBackoffMs": 100, // Delay between retries
    "RequestTimeoutMs": 5000,
    "MessageTimeoutMs": 15000
  },

  "AllowedHosts": "*"
}
